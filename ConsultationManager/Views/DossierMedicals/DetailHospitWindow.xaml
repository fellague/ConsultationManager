                             ClipToBounds="True" Margin="20">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.ColumnSpan="2" Text="Compte Rendu" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="20" Margin="220 0 0 0"></TextBlock>

                <TextBox Grid.Row="1" Text="{Binding SelectConcl.CompteRendu.Description}" TextWrapping="Wrap"  AcceptsReturn="True" MinLines="6" MaxLines="6" VerticalScrollBarVisibility="Auto"
                             FontSize="16" VerticalAlignment="Top" materialDesign:TextFieldAssist.Hint="Compte Rendu de la Consultation" Margin="30 0 30 0"></TextBox>
                <Button Command="{Binding UpdateCompteRendu}" Grid.Row="2" HorizontalAlignment="Right" Margin="10" Width="150">
                    Modifier
                </Button>
            </Grid>
        </Border>-->
    </Grid>
</Window>
